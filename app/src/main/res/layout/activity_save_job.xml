<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveJobActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/square_pink_no_radius_top"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imgBackButton"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/ic_keyboard_arrow_left_24px">

        </ImageButton>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:text="Loker Tersimpan"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSaveJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_savejob"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="48dp">

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>